<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
    </dict>

    <!-- HealthKit Usage Description -->
    <key>NSHealthShareUsageDescription</key>
    <string>CoreFitness uses your health data to calculate your daily Overall Score, track recovery, and personalize your workout recommendations.</string>

    <key>NSHealthUpdateUsageDescription</key>
    <string>CoreFitness saves your workout data to Apple Health to keep all your fitness data in one place.</string>

    <!-- Camera Usage (for progress photos) -->
    <key>NSCameraUsageDescription</key>
    <string>CoreFitness uses the camera to take progress selfies that you can attach to your daily check-ins.</string>

    <!-- Photo Library Usage -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>CoreFitness needs access to your photo library to save and select progress photos.</string>

    <!-- Location Usage (for outdoor workouts) -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>CoreFitness uses your location to track outdoor runs and workouts, and to map your routes.</string>

    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>CoreFitness uses your location to track outdoor runs and workouts even when the app is in the background.</string>

    <!-- Motion Usage (for step counting) -->
    <key>NSMotionUsageDescription</key>
    <string>CoreFitness uses motion data to count steps and track your daily activity.</string>

    <!-- Face ID Usage -->
    <key>NSFaceIDUsageDescription</key>
    <string>CoreFitness uses Face ID to securely access your fitness data and settings.</string>

    <!-- Live Activities -->
    <key>NSSupportsLiveActivities</key>
    <true/>

    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>processing</string>
        <string>remote-notification</string>
        <string>location</string>
    </array>

    <!-- Required Device Capabilities -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>armv7</string>
        <string>healthkit</string>
    </array>

    <!-- Supported Interface Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
    </array>

    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Launch Screen -->
    <key>UILaunchScreen</key>
    <dict>
        <key>UIColorName</key>
        <string>LaunchScreenBackground</string>
        <key>UIImageName</key>
        <string>LaunchIcon</string>
    </dict>

    <!-- Status Bar -->
    <key>UIStatusBarStyle</key>
    <string>UIStatusBarStyleDefault</string>
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <true/>

    <!-- App Supports Multiple Windows (iPad) -->
    <key>UIApplicationSupportsMultipleScenes</key>
    <true/>
</dict>
</plist>
